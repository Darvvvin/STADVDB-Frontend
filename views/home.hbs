<div class="container">
	<div class="card-header mt-3">
		<h1 style="font-weight: 800;">Developer / Publisher Search</h1>
	</div>

	<div class="card mt-3">
  	<div class="card-body">
			<h1>Developers</h1>
			<div class="form-group">
		    <label>Browse by Developer</label>
		    <select class="steam-fields w-100 p-1" style="color:white;" id="developer-options">
		      <option>1</option>
		      <option>2</option>
		      <option>3</option>
		      <option>Putnam</option>
		      <option>5</option>
		    </select>
		  </div>
		</div>
	</div>

	<div class="card mt-3">
  	<div class="card-body">
			<h1>Publishers</h1>
			<div class="form-group">
		    <label>Browse by Publisher</label>
		    <select class="steam-fields w-100 p-1" style="color:white;" id="publisher-options">
		      <option>1</option>
		      <option>2</option>
		      <option>3</option>
		      <option>4</option>
		      <option>5</option>
		    </select>
		  </div>
		</div>
	</div>

	<button type="button" class="search-buttons w-100 btn mt-3">Search</button>

	<div class="card mt-3">
  	<div class="card-body">
			<h1>Results</h1>

			<div style="display: flex;">

			{{> steam_card}}

			<div class="card m-1" style="width: 12rem; background-color: #16202d;">
			  <i class="fab fa-steam-square" style="color: red; font-size: 8rem; text-align: center;"></i>
			  <div class="card-body">
			    <h4 class="card-title"><b>Game Title</b></h4>
			    <h5 style="color: red; font-size: 12pt;"><b>Negative</b></h5>
					<!--
			    <small> ID:  <br>
			            Publisher: <br>
			            Developer: <br>
			            Genre: <br>
			            Price:
			    </small>
					-->
			  </div>
			</div>


			<div class="card m-1" style="width: 12rem; background-color: #16202d;">
			  <i class="fab fa-steam-square" style="color: orange; font-size: 8rem; text-align: center;"></i>
			  <div class="card-body">
			    <h4 class="card-title"><b>Game Title</b></h4>
			    <h5 style="color: orange; font-size: 12pt;"><b>Mixed</b></h5>
					<!--
			    <small> ID:  <br>
			            Publisher: <br>
			            Developer: <br>
			            Genre: <br>
			            Price:
			    </small>
					-->
			  </div>
			</div>


			</div>
		</div>
	</div>
</div>
